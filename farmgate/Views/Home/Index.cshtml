@model IEnumerable<farmgate.Models.Product>

@{
    ViewBag.Title = "Home Page";
}

<style>
    body {
        background-color:lemonchiffon;
    }
    .carousel .item {
        height: 300px;
        width: 1200px;
    }

    .item img {
        position: absolute;
        top: 0;
        left: 0;
        min-height: 300px;
        min-width: 1200px;
    }

    .thumbnail img {
        height: 150px;
        width: 80%;
        margin: 20px 20px 20px 20px;

    }

</style>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
        </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/fa12.jpg">
        </div>

        <div class="item">
            <img src="~/Content/faa1.jpg">
        </div>

        <div class="item">
            <img src="~/Content/fa3.jpg">
        </div>
        <div class="item">
            <img src="~/Content/fa14.jpg">
        </div>
        <div class="item">
            <img src="~/Content/fa5.jpg">
        </div>
        <div class="item">
            <img src="~/Content/fa6.jpg">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br /> <br /><br />

@using (Html.BeginForm())
{
    <p>
        Find Product: @Html.TextBox("SearchString")
        <input type="submit" value="Search"/>
    </p>
}

<div class="row">

    @foreach (var product in Model)
    {
            <div class="col-md-4">
                <div class="thumbnail">
                    <h2>@product.Name</h2>
                    <a href="@Url.Action("details","Products", new{id=@product.ID} )"> <img src="@Url.Content(product.ImageUrl)" alt="Image" class="img-responsive"> </a>
                    <p>Description: @product.Description </p>
                    <p>price ₦ @product.price </p>
                </div>
            </div>

